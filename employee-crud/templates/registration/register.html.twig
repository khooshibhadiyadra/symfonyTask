{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<style>
body {font-family: Arial, Helvetica, sans-serif;}
* {box-sizing: border-box;}

input[type=text], select, textarea {
  width: 100%;
  padding: 12px;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
  margin-top: 6px;
  margin-bottom: 16px;
  resize: vertical;
}

input[type=submit] {
  background-color: #04AA6D;
  color: white;
  padding: 12px 20px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

input[type=submit]:hover {
  background-color: #45a049;
}

.container {
  border-radius: 3px;
  background-color: #f2f2f2;
  padding: 20px;
}
</style>
    <h1 align="center">Register</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm,{'attr': {'class': 'employee-form'}}) }}
<div class="container">
   <div class="row">
        {{ form_row(registrationForm.email,{'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="row">
        {{ form_row(registrationForm.plainPassword,label: 'Password',{'attr': {'class': 'form-control'}}) }}
    </div>
<br>
<div class="form-check">
        {{ form_row(registrationForm.agreeTerms,{'attr': {'class': 'form-check-input'}}) }}
</div>
<br>
    <div>
   <button type="submit" class="btn btn-primary">Register</button>
    </div>
    <br>
            <div class="mb-3">
        Existing User? <a href="{{ path('app_login') }}">Login</a>
    </div>
</div>
    {{ form_end(registrationForm) }}
{% endblock %}
